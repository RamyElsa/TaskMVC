@model IEnumerable<TaskMVC>
@{
    ViewData["Title"] = "TaskList";
}

<div class="col-6">
    <h2 class="text-primary">List Of Tasks</h2>
</div>

<div class="col-6 text-end">
    <a class="btn btn-primary" asp-action="Create" asp-controller="TaskMVC"><i class="bi bi-plus-circle"></i>&nbsp;Create New Task</a>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Description
            </th>
            <th>
                Period
            </th>

            <th>
                StudentName
            </th>

            <th>
                TeacherName
            </th>
            <th>
                Status
            </th>


            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Date
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Period
                </td>
                <td>
                    @item.StudentId
                </td>

                <td>
                    @item.TeacherName
                </td>

                <td>
                    @item.ChosesStatus
                </td>

                <td>
                    <a class="btn btn-success" href="/TaskMVC/Edit?id=@item.Id"><i class="bi bi-pen"></i></a> |
                    <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/TaskMVC/Delete?id=@item.Id"><i class="bi bi-trash"></i></a>
                </td>

            </tr>
        }
    </tbody>
</table>

