@model IEnumerable<TaskMVC>
@{
    ViewData["Title"] = "Index";
}

<div class="col-6">
    <h2 class="text-primary">List Of Tasks</h2>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Description
            </th>
            <th>
                Period
            </th>

            <th>
                TeacherName
            </th>
            <th>
                Status
            </th>


            <th>
                Action
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Date
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Period
                </td>

                <td>
                    @item.TeacherName
                </td>

                <td>
                    @item.ChosesStatus
                </td>

                <td>

                    <a class="btn btn-success" href="/StudentTask/StudentEdit?id=@item.Id"><i class="bi bi-pen"></i></a> 

                </td>

            </tr>
        }
    </tbody>
</table>



