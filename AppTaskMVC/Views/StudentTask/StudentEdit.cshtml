@using AppTaskModels.Enum;
@model ApptaskData.ViewModels.NewTaskVM
@{
    ViewData["Title"] = "Edit Task";
}

<div class="container">
    <form class="form-group" method="post" asp-action="StudentEdit">
        <h2 class="pb-10">Update Task </h2>
        <input type="hidden" class="form-control" asp-for="Id">

        <div class="input-container">
            <label asp-for="Description" class="col-form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description"  disabled>
            <span asp-validation-for="Description"> </span>
        </div>

        <div class="input-container">
            <label asp-for="Period" class="col-form-label">Period</label>
            <input type="text" class="form-control" asp-for="Period" disabled>
            <span asp-validation-for="Period"> </span>
        </div>

        <div class="input-container">
            <label asp-for="TeacherName" class="col-form-label">Teacher Name</label>
            <input type="text" class="form-control" asp-for="TeacherName"  disabled>
            <span asp-validation-for="TeacherName"> </span>
        </div>

        <div class="form-group">
            <label asp-for="status" class="control-label">ChosesStatus</label>
            <select asp-for="status" class="form-control" asp-items="Html.GetEnumSelectList<ChosesStatus>()"></select>
            <span asp-validation-for="status" class="text-danger"></span>
        </div>


        <div class="input-container">
            <button class="btn btn-primary" type="submit">Update Task</button>
            <a class="btn btn-info" href="/StudentTask/Index">All Tasks</a>
        </div>
    </form>
</div>

